// Scrollbar styles for webkit
::-webkit-scrollbar
  -webkit-appearance none
  width .75em

::-webkit-scrollbar-track //color of scrollbar background
	background $c-main
	
::-webkit-scrollbar-thumb //color of scrollbar position
	background $c-white
	border 2px solid $c-main


// Highlight color when selecting text
::selection 
	color $c-white
	background $c-highlight

body
	@extend $f-sans
	margin 0 auto
	padding 0
	font-size 100%
	color $c-main
	background $c-white
	
	@media $r-desktop
		font-size 110%
		
// global typography
p
	margin 0 auto 1em
	
	a
		border-bottom 1px solid
		
		&:hover, &:focus
			color $c-highlight
				
h2
	@extend p
	font inherit
	
strong, b
	font-weight $f-bold

a
	color inherit
	text-decoration none
	transition $t-all
	
ul, ol
	margin 0 auto 1em
	padding 0 1em
	
	li
		margin 0 auto
		padding .25em 0
	
blockquote
	max-width 25em
	margin 2em auto
	padding 0 1em
	font-size $f-l
	text-align center
	color $c-main
	
// UI
hr
	margin 0 auto 1em
	height 1px
	border 0
	background $c-main
		
