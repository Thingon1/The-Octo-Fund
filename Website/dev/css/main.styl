@import 'functions'
@import 'normalize'
@import 'variables'
@import 'global'

main
  position fixed
  height 100%
  width 100%
  
  &.active
    #intro
      height 50%

section 
  position relative
  transition $t-all-slow
  
#intro
  height 100%
  text-align center
  color $c-white
  background $c-black
  
  &:before, &:after
    content ""
    position absolute
    width 100%
    height 100%
    top 0
    left 0
    
  &:before
    background url(img/tentacles-top.png) no-repeat top center / contain
    
  &:after
    background url(img/tentacles-bottom.png) no-repeat bottom center / contain
  
h1 //logo
  @extend $middle
  width 100%
  
  img 
    width 80%
    max-width 18em
    margin 0 auto
    
#about
  border-top 2px solid $c-black
